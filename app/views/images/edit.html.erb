<h1>Edit Image</h1>
<div class="row">
  <div class="col-md-8">
    <h3>
      $<%= to_currency(@image.image_price) %>
    </h3>
    <img src="<%= @image.image_url%>" />
  </div>
  <div class="col-md-4">
    <%= form_for @image do |f| %>
      <p>
      <%= f.label :image_price %>
      <%= f.number_field :image_price %>
      </p>
      <p>
      <%= f.label 'Image Name' %>
      <%= f.text_field :image_url %>
      </p>
      <p>
      <%= f.submit 'Update' %>
      </p>
    <% end %>
  </div>
</div>